<style>
    body {
        position: relative;
    }
    section {
        margin: auto;
        width: 80%;
    }
    #add-btn {
        margin-top: 20px;
        margin-bottom: 30px;
    }
    .table-striped tbody tr {
        background-color: white !important;
    }
    
    th {
        border-top: none !important;
    }
    

    .list-headers{
        width: auto;
    }
    
     .inner-headings {
         width: 128px;
         display: inline-block;
         font-weight: 700;
         font-size: 13px;
     }
     .table-data,
     .edit-del {
         display: inline-block;
     }
     .inner-data {
         width: 128px;
         display: inline-block;
         font-size: 13px;
     }
     .options {
         width: 64px;
         display: inline-block;
         font-size: 13px;
     }
     .container-list {
         margin-bottom: 100px;
     }
</style>



<section id="cont-div" >
    <h2> {{pageHeader}} </h2>
        <div id="add-btn" class="d-flex justify-content-between">
            <button type="button" class="btn btn-secondary my-2" >
                <a href="{{newUrl.0.link}}" style="text-decoration: none; color:white;">{{newUrl.0.text}}</a>
            </button>
           
            <button type="button" id="alert-btn" class="btn btn-secondary my-2 text-right"  >
                <a href="{{newUrl.1.link}}" style="text-decoration: none; color:white;" >{{newUrl.1.text}}</a>
            </button>
        </div>

            <div class="container-list"> 
                

                <div class="data-container">

                    <table class="table table-striped table text-center">
                        <tbody class="tbody">
                                <tr>
                                    {{#each fieldData}}
                                        <th>
                                            {{this.[3]}}
                                        </th>
                                    {{/each}}
                                </tr>
                                
                            {{#each arrayData}}
                                <tr>
                                    {{#each this}}
                                        {{#if @first}}

                                        {{/if}}
                                        {{#unless @first}}
                                            <td>
                                                    {{this}}
                                                </td>
                                        {{/unless}}
                                    {{/each}}

                                    {{#each ../urlOptions}}
                                        <td>
                                            <a href="{{this.link}}{{../this.[0]}}" form="input-product"  data-id="{{../this.[0]}}"  class="editlink" onclick="tableDisplay();">{{this.text}}</a>
                                        
                                    </td>
                                    {{/each}}

                                    {{!-- <td>
                                        <a href="{{../urlOptions.3.link}}{{this.[0]}}" form="input-product"  data-id="{{this.[0]}}"  class="editlink" onclick="tableDisplay();">{{../urlOptions.3.link}}</a>
                                        
                                    </td> --}}
                                    {{!-- <td>
                                        <a href="{{../urlOptions.4.link}}?id={{this.[0]}}"   class="deletelink" data-id="{{this.[0]}}">Delete</a>
                                    </td> --}}
                                
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    
                </div>

            </div>
       
    </section>
